[Unit]
Description=Serveo Server Docker Container
Requires=docker.service
After=docker.service

[Service]
Type=simple
WorkingDirectory={{ serveo_config_dir }}
ExecStart=/usr/bin/docker-compose up
ExecStop=/usr/bin/docker-compose down
TimeoutStartSec=0
Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target 